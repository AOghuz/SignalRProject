@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <div class="container my-4">
            <h3 class="mb-3 text-center fw-normal">QR Kod Oluştur & Çöz</h3>

            <div class="row g-3">
                <!-- QR Kod Oluşturma -->
                <div class="col-md-6">
                    <form method="post" enctype="multipart/form-data" class="p-3 border rounded">
                        <input type="hidden" name="action" value="generate" />
                        <input type="text" name="value" class="form-control form-control-sm mb-2" placeholder="Metin girin..." required />
                        <button type="submit" class="btn btn-primary btn-sm w-100">Oluştur</button>

                        @if (ViewBag.QrCodeImage != null)
                        {
                            <div class="mt-3 text-center">
                                <img src="@ViewBag.QrCodeImage" alt="QR Kod" style="max-width:180px; height:auto;" />
                            </div>
                        }
                    </form>
                </div>

                <!-- QR Kod Çözme -->
                <div class="col-md-6">
                    <form method="post" enctype="multipart/form-data" class="p-3 border rounded">
                        <input type="hidden" name="action" value="decode" />
                        <input type="file" name="qrFile" class="form-control form-control-sm mb-2" accept="image/*" required />
                        <button type="submit" class="btn btn-success btn-sm w-100">Çöz</button>

                        @if (ViewBag.DecodedText != null)
                        {
                            <div class="alert alert-success py-1 px-2 mt-3 small mb-0" role="alert">
                                <strong>QR Kod: </strong> @ViewBag.DecodedText
                            </div>
                        }
                        @if (ViewBag.Error != null)
                        {
                            <div class="alert alert-danger py-1 px-2 mt-3 small mb-0" role="alert">
                                @ViewBag.Error
                            </div>
                        }
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>