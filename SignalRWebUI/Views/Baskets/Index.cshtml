@model IEnumerable<SignalRWebUI.Dtos.BasketDtos.ResultBasketDto>

@{
    Layout = null;                       // sayfayı tam ekran bir layout’ta kullanacaksanız gerekli değilse silebilirsiniz

    /* —­­ Hesaplamalar —­­ */
    decimal subTotal = Model.Sum(x => x.TotalPrice);   // adet × fiyat
    decimal tax = subTotal * 0.10m;               // %10 KDV
    decimal grandTotal = subTotal + tax;

    int rowNumber = 0;
}

<!DOCTYPE html>
<html>
@await Component.InvokeAsync("_UILayoutHeadComponentPartial")

<body class="sub_page">

    @await Component.InvokeAsync("_MenuNavbarComponentPartial")

    <!-- ▸ Sayfa başlığı / breadcrumb -->
    <div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col-12">
                <nav class="breadcrumb bg-dark mb-30">
                    <a class="breadcrumb-item text-white" href="/Default/Index">Ana Sayfa</a>
                    <a class="breadcrumb-item text-white" href="/Menu/Index">Menü</a>
                    <span class="breadcrumb-item active">Sepetiniz</span>
                </nav>
            </div>
        </div>
    </div>

    <!-- ▸ İçerik -->
    <div class="container-fluid">
        <div class="row px-xl-5">

            <!-- ■ Sol: Sepet Tablosu -->
            <div class="col-lg-8 table-responsive mb-5">
                <table class="table table-light table-borderless table-hover text-center mb-0">
                    <thead class="thead-dark">
                        <tr>
                            <th>#</th>
                            <th>Ürün Adı</th>
                            <th>Adet</th>
                            <th>Birim Fiyat</th>
                            <th>Toplam</th>
                            <th>Sil</th>
                        </tr>
                    </thead>

                    <tbody class="align-middle">
                        @foreach (var item in Model)
                        {
                            rowNumber++;
                            <tr>
                                <td>@rowNumber</td>
                                <td>@item.ProductName</td>
                                <td>@item.Count</td>
                                <td>@item.Price.ToString("0.00") ₺</td>
                                <td>@item.TotalPrice.ToString("0.00") ₺</td>
                                <td>
                                    <a class="btn btn-sm btn-danger"
                                       href="/Baskets/DeleteBasket/@item.BasketID?tableId=@item.MenuTableID">
                                        <i class="fa fa-times"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- ■ Sağ: Sepet Özeti -->
            <div class="col-lg-4">
                <form>
                    <div class="input-group mb-3">
                        <input type="text" class="form-control border-1 p-3" placeholder="Kupon Kodunuz" />
                        <button type="button" class="btn btn-warning">Kuponu Uygula</button>
                    </div>
                </form>

                <h5 class="section-title position-relative text-uppercase mb-3">
                    <span class="bg-warning pr-3">SEPET ÖZETİ</span>
                </h5>

                <div class="bg-light p-30 mb-5">
                    <div class="d-flex justify-content-between">
                        <span>Toplam Tutar</span>
                        <span>@subTotal.ToString("0.00") ₺</span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <span>KDV (%10)</span>
                        <span>@tax.ToString("0.00") ₺</span>
                    </div>

                    <hr />

                    <div class="d-flex justify-content-between font-weight-bold">
                        <span>Genel Toplam</span>
                        <span>@grandTotal.ToString("0.00") ₺</span>
                    </div>

                    <button id="btnchecked"
                            class="btn btn-block btn-warning font-weight-bold my-3">
                        Siparişi Tamamla
                    </button>
                </div>
            </div>

        </div>
    </div>

    @await Component.InvokeAsync("_UILayoutFooterComponentPartial")
    @await Component.InvokeAsync("_UILayoutScriptComponentPartial")
</body>
</html>
